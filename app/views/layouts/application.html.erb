  </head>


  <body>
    <%# if params[:controller] != "pages" && params[:action] != "home" && user_signed_in? %>
      <!-- <div id="site-content"> -->
        <%= render 'shared/flashes' %>
        <%= render 'shared/navbar' %>
        <%#= yield %>
      <!-- </div> -->
    <%# else %>
      <%= yield %>
    <%# end %>

    <%= javascript_include_tag 'application' %>
    <%= javascript_pack_tag 'application' %>
  </body>
</html>
