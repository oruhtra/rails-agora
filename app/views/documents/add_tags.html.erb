<!-- this part is in the navbar  -->
<h3 class="text-center add-tags-title">Ajoutez des tags à vos documents</h3>

<div class="position-relative margin-left-md margin-right-md">
  <div class="fade-out-left fade-out-left-grey"></div>
  <div class="fade-out-right fade-out-right-grey"></div>

  <% if @documents.length < 4 %>
    <div class="new-documents-wrapper flex-around align-items-center">
  <% else %>
    <div class="new-documents-wrapper flex align-items-center">
  <% end %>
    <% @documents.each do |document| %>

      <div class= "card margin-left-md margin-right-md" id="<%= document.id %>" style="width: 200px; height: <%= document.ratio ? 200 * document.ratio : 280 %>px">
        <%= cl_image_tag document.photo, class: "document-thumbnail-large card-image", :width => "200px", :format => 'jpg' %>
        <div class="hover-card" id="<%= document.id %>">
          <div class="card-description">
            <div class="card-title">
              <% if document.name[20] %>
                <h5 class="breakword"><%= document.name[0..26] %>...</h5>
              <% else %>
                <h5 class="breakword"><%= document.name %></h5>
              <% end %>
            </div>
            <div class="current-tags">
              <%= render 'current_tags_section', document: document %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="add-tags">

  <div class="container">
    <div class="row">

      <% if !@tags.where(category: "user_specific").empty? %>
        <div class="col-xs-12">
          <div class="tags-bloc">
            <p class= "tag-container-title" id="tags-container-title-user_specific">Vos tags</p>
            <div class="position-relative">
              <div class="fade-out-top fade-out-top-white"></div>
              <div class="tags-container">
                <% (@tags.where(category: "user_specific")).each do |t| %>
                  <div class="tag-categories">
                    <i class="tag tag-link text-center <%= t.category %>" id="<%= t.name %>"><%= t.name_clean %></i>
                  </div>
                <% end %>
              </div>
              <div class="fade-out-bottom fade-out-bottom-white"></div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="col-xs-12">
        <div class="tags-bloc">
          <p class= "tag-container-title" id="tags-container-title-macro_category">Catégorie</p>
          <div class="position-relative">
            <div class="fade-out-top fade-out-top-white"></div>
            <div class="tags-container">
              <% (@tags.where(category: "macro_category")).each do |t| %>
              <div class="tag-categories" <%= "id= #{t.macro_category}" unless !t.macro_category %>>
                <i class="tag tag-link text-center <%= t.category %>" id="<%= t.name %>"><%= t.name_clean %></i>
              </div>
              <% end %>
            </div>
            <div class="fade-out-bottom fade-out-bottom-white"></div>
          </div>
        </div>
      </div>

      <div class="col-xs-12">
        <div class="tags-bloc">
          <p class= "tag-container-title hidden" id="tags-container-title-doc_type">Type de document</p>
          <div class="position-relative">
            <div class="fade-out-top fade-out-top-white"></div>
            <div class="tags-container">
              <% (@tags.where(category: "doc_type")).each do |t| %>
                <div class="tag-categories" <%= "id= #{t.macro_category}" unless !t.macro_category %>>
                  <i class="tag tag-link text-center <%= t.category %> hidden" id="<%= t.name %>"><%= t.name_clean %></i>
                </div>
              <% end %>
            </div>
            <div class="fade-out-bottom fade-out-bottom-white"></div>
          </div>
        </div>
      </div>

      <div class="col-xs-12 col-md-6">
        <div class="tags-bloc">
          <p class= "tag-container-title hidden" id="tags-container-title-supplier">Etablissement</p>
          <div class="position-relative">
            <div class="fade-out-top fade-out-top-white"></div>
            <div class="tags-container">
              <% (@tags.where(category: "supplier")).each do |t| %>
                <div class="tag-categories" <%= "id= #{t.macro_category}" unless !t.macro_category %>>
                  <i class="tag tag-link text-center <%= t.category %> hidden" id="<%= t.name %>"><%= t.name_clean %></i>
                </div>
              <% end %>
            </div>
            <div class="fade-out-bottom fade-out-bottom-white"></div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="form-container">
    <div class="container">
      <div class="row">
        <div class="col-xs-6 col-sm-5 col-md-4">
            <%= simple_form_for @tag, url: batch_update_documents_path, remote: true do |f| %>

              <div class="flex">
                <%= f.input :name, label: false, placeholder: "Créer un tag"%>
                <% @documents.each do |document| %>
                  <%= hidden_field_tag "documents_all_ids[]", document.id %>
                <% end %>
                <%= f.submit "Créer Tag", class: "form-button text-center"%>
              </div>

            <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
      <div class="row">
        <div class="col-xs-12 col-md-6 col-md-offset-3">
          <div class="add-tags-controls">
            <%= link_to 'Valider', documents_path, class: "btnadd banner-button text-center"  %>
          </div>
        </div>
      </div>
    </div>

      </div>
    </div>
  </div>
</div>

<div class= "hidden">
  <%= form_tag(batch_update_documents_path, id:"post-tags-form", remote: true) do %>
  <%= text_field_tag :tagname %>
  <% @documents.each do |document| %>
    <%= hidden_field_tag "documents_all_ids[]", document.id %>
  <% end %>
  <%= submit_tag nil, id: "submit-batch-tag"%>
  <% end %>
</div>

