<div class="title">
  <%= simple_form_for(@document) do |f| %>
    <%= f.input :name, label: "Titre" %>
    <%= f.submit class:"hidden"%>
  <% end %>
</div>

<div class="current-tags">
  <% if @doctags.empty? %>
    <p>No tags selected yet</p>
  <% else %>
    <p>Tags existants</p>
    <div class="existing-tags">
      <% @doctags.each do |t| %>
        <%= link_to document_doctag_path(@document, t), method: :delete do %>
        <div class="tag tag-link tag-s text-center"><%= t.tag.name_clean %></div>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
<div class="add-tags">
  <p >Ajouter des tags</p>
  <div class="other-tags">
    <% @other_tags.each do |t| %>
      <%= link_to document_doctags_path(@document, tag: t), method: :post do %>
        <div class="tag tag-link text-center"><%= t.name_clean %></div>
      <% end %>
    <% end %>
