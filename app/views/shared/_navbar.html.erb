
<div class="navbar-wagon">

  <div class="navbar-wagon-left" >
    <!-- Logo -->
    <% if user_signed_in? %>
      <%= link_to documents_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "logo.png", height: 30 %>
      <% end %>
    <% else %>
      <%= link_to root_path, class: "navbar-wagon-brand" do %>
        <%= image_tag "logo.png", height: 30 %>
      <% end %>
    <% end %>

    <%= yield :navbar %>
  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs">

        <i class="fa fa-plus ref dz-message" style="cursor: pointer;" id="clickable" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="Ajouter un document"></i>

      <%= link_to scrap_documents_documents_path do %>
        <i class="fa fa-refresh ref" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="Récupérer mes documents"></i>
      <% end %>

      <%= link_to new_user_service_path do %>
        <i class="fa fa-plug ref" aria-hidden="true" data-toggle="tooltip" data-placement="bottom" title="Ajouter un service"></i>
      <% end %>

    <% if user_signed_in? %>
      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">

          <% if !current_user.photo.public_id.nil? %>
            <%= cl_image_tag current_user.photo, class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% else %>
            <%= image_tag '/Img/user.png', class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <% end %>

          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to edit_user_registration_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

</div>

